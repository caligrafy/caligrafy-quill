- $amount = $metadata['amount'] != '' ? $metadata['amount'] : '0.00'
div(itemscope, itemtype="http://schema.org/Product")
    meta(itemprop="name", content=$metadata['site_name'])/
    meta(itemprop="description", content="{$metadata['description']}")/
    meta(itemprop="image", content="{$metadata['image']}")/
    div(itemprop="aggregateRating", itemscope, itemtype="https://schema.org/AggregateRating", class="hide")
        span(itemprop="ratingValue")= $metadata['ratingValue']?? 0
        span(itemprop="reviewCount")= $metadata['reviewCount']?? 1

    div(itemprop="offers", itemscope, itemtype="https://schema.org/Offer", class="hide")
        span(itemprop="price")= $amount
        span(itemprop="priceValidUntil")= $metadata['priceValidUntil']?? date("Y-m-d")
        meta(itemprop="priceCurrency", content="USD")/ 
        meta(itemprop="availability", itemtype="http://schema.org/ItemAvailability"
            content="http://schema.org/InStock")/
